<h1>New recipe</h1>

<% form_for(@recipe) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.check_box :private %> <%= f.label :private, "Private Recipe?" %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <% f.fields_for :authorships do |authors_form| %>
    <p>
      <%= authors_form.label :brewer_id, "Author:" %><br />
      <%= authors_form.select :brewer_id, options_from_collection_for_select(Brewer.all, 'id', 'name') %>
    </p>
  <% end %>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', recipes_path %>