<h1>New hops_addition</h1>

<% form_for(@hops_addition) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :hops_type %><br />
	<%= f.collection_select(:hops_type, HopsType.all, :id, :name) %> <br />
  </p>
  <p>
    <%= f.label :time %><br />
    <%= f.text_field :time %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :secondary %><br />
    <%= f.check_box :secondary %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', hops_additions_path %>